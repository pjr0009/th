= stylesheet_link_tag "news_index"
- content_for :title, "News, Reviews, and How-to's"
- content_for :meta_description, "Read tack reviews, saddle reviews, tips & how-to's, and more."
- content_for :keywords, "Equestrian news,Equestrian blog,Horse blog"

= content_for :hero do
  .layout-column.layout-padding.layout-align-end-start.layout-fill.flex-offset-gt-xs-5
    .flex-30.hero-brand.hide-xs.hide-sm
      %h1
        Tack Hunter News
    .flex.hero-title
      %h1
        = link_to @featured_news_post.title.capitalize, news_path(@featured_news_post), class: "hero-feature-title"
    .flex.show-xs.show-sm.hide-gt-sm
    .flex.hero-subtitle
      %h2
        By
        = @featured_news_post.person.username
    
    .flex.hero-cta
      .row
        .col-12
          = link_to "Read Now", news_path(@featured_news_post), class: "button"
  .hero-feature-image{style: "background-image: url('#{@featured_news_post.image(:feature)}')"}
.layout-row.layout-align-center-center
  .row.news-posts.flex-gt-md-66
    - @news_posts.each do |news_post|
      .col-3
        .news-card
          = link_to news_path(news_post) do
            .news-card-image{style: "background-image: url(#{news_post.image(:medium)})"}
            .news-card-title
              %h4
                = news_post.title.capitalize
              / Author
            .news-card-summary 
              %small
                = news_post.summary

            .news-card-footer
              %small
                By
                = news_post.person.username
